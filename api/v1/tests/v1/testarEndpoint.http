@config_api.env

@BASE_URL = http://localhost/projeto-qa/api/v1

### Create a new user
POST {{BASE_URL}}/users
Content-Type: application/json

{
  "IDUSUARIO":"9",
  "NOMEUSUARIO": "NOMEUSUARIO",
  "LOGINUSUARIO": "qa@qa2.com",
  "SENHAUSUARIO": "SENHAUSUARIO",
  "NIVELUSUARIO": "1"
}

### Get the created user
GET {{BASE_URL}}/users

### Get the created user
GET {{BASE_URL}}/users/2

### Update the user
PUT {{BASE_URL}}/users/1
Content-Type: application/json

{
  "IDUSUARIO":"9",
  "NOMEUSUARIO": "NOMEUSUARIO",
  "LOGINUSUARIO": "qa@qa2.com",
  "SENHAUSUARIO": "SENHAUSUARIO",
  "NIVELUSUARIO": "1"
}

### Delete the user
DELETE {{BASE_URL}}/users/1

### Create a new product
POST {{BASE_URL}}/products
Content-Type: application/json

{
  "name": "Test Product",
  "price": 19.99
}

### Get the created product
GET {{BASE_URL}}/products/2

### Update the product
PUT {{BASE_URL}}/products/2
Content-Type: application/json

{
  "name": "Updated Product",
  "price": 29.99
}

### Delete the product
DELETE {{BASE_URL}}/products/2